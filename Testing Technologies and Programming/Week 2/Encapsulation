class User { // Base class representing a user
	constructor () { // Constructor to initialize the first name and last name for the user
        this._firstName = "";
        this._lastName = "";
	}

    get firstName() { // Getter method to retrieve the first name of the user
        return this._firstName;
    }

    get lastName() { // Getter method to retrieve the last name of the user
        return this._lastName;
    }

    set firstName(firstName) { // Setter method to set the first name of the user
        this._firstName = firstName;
    }

    set lastName(lastName) { // Setter method to set the last name of the user
        this._lastName = lastName;
    }

    hello() {
        return "hello world"; // Method to return a greeting message
    }
}

    const user = new User(); // Create an instance of the user class with first name "John" and last name "Doe"

    user.firstName = "John"; // Set the first name of the user to "John"
    user.lastName = "Doe"; // Set the last name of the user to "Doe"

    console.log(user.hello()); // Output: hello world
    console.log(`My name is `+ user.firstName + ` ` + user.lastName); //Output name is John Doe


